@model IEnumerable<SiteOnepiece.Models.Enfant>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-10">
            <h2 class="text-primary">Pirate</h2>
        </div>
        <div class="col-md-2 text-end">
            <a asp-action="Create" class="btn btn-success">
                Crée ton propre pirate
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center bg-light">
                        <h3 class="card-title text-dark"> @item.Nom </h3>
                        
                        <partial name="_EnfantPartial" for="@item" />
                        
                        <h5 class="card-subtitle mb-2 text-muted">Fruit du Démon : @item.NomFruitDemon </h5>
                        <h5 class="text-success">Occupation : @item.Occupation </h5>
                        <td>
                            <a asp-action="Edit" asp-route-Id="@item.id" class="btn btn-info mt-3">
                                Modifier
                            </a>
                        </td>                       
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
