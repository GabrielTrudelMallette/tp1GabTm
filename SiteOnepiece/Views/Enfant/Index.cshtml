@model IEnumerable<SiteOnepiece.Models.Enfant>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-10">
            <h2 class="text-primary">Pirate</h2>
        </div>
        <div class="col-md-2 text-end">
            <a asp-action="Create" class="btn btn-success">
                Crée ton propre pirate
            </a>
        </div>
    </div>
    <p>@TempData["Success"]</p>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center bg-light">
                        <h3 class="card-title text-dark"> @item.Nom </h3>
                        
                        <partial name="_EnfantBouton" for="@item" />
                        
                                     
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
