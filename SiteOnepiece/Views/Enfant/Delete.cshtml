@model SiteOnepiece.Models.Enfant
@{
	ViewData["Title"] = "Delete";
}

<h1> supprimer votre pirates ?</h1>

<div class="row">
    <div class="col-md-4">
        <div class="row p-3 ">
            <form asp-action="DeletePost" asp-route-Id="@Model.id">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Nom" class="control-label"></label>
                    </div>
                    <div class="col-8">
                        @Model.Nom
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="@Model.Description" class="col-form-label"></label>
                    </div>
                    <div class="col-8">
                        @Model.Description
                    </div>
                </div>                            
                <div class="row form-group">
                    <div class="col-4"> </div>
                    <div class="col-4">
                        <input type="submit" value="Delete" class="btn btn-danger" />
                    </div>
                    <div class="col-4">
                        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
