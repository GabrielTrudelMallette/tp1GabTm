@model SiteOnepiece.Models.Enfant

@{
    ViewData["Title"] = "Supprimer votre pirate ?";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            <div class="card shadow-lg border-danger">
                <div class="card-header bg-danger text-white text-center">
                    <h2>Supprimer votre pirate ?</h2>
                </div>
                <div class="card-body">
                    <form asp-action="DeletePost" asp-route-Id="@Model.id">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-4">
                            <label asp-for="Nom" class="form-label fw-bold">Nom :</label>
                            <div class="form-control-plaintext border rounded p-2">@Model.Nom</div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-bold">Description :</label>
                            <div class="form-control-plaintext border rounded p-2">@Model.Description</div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-danger btn-lg px-4">Supprimer</button>
                            <a class="btn btn-secondary btn-lg px-4" asp-action="Index">Retour à la liste</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
