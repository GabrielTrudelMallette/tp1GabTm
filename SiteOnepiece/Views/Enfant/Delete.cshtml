@model SiteOnepiece.Models.Enfant
@{
    ViewData["Title"] = "Supprimer votre pirate ?";
}

<h1 class="text-danger">Supprimer votre pirate ?</h1>

<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="card shadow p-4">
            <form asp-action="DeletePost" asp-route-Id="@Model.id">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Nom" class="form-label fw-bold">Nom</label>
                    <div class="form-control-plaintext">@Model.Nom</div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <div class="form-control-plaintext">@Model.Description</div>
                </div>

                <div class="d-flex justify-content-between mt-4">
                    <input type="submit" value="Supprimer" class="btn btn-danger btn-lg" />
                    <a class="btn btn-secondary btn-lg" asp-action="Index">Retour à la liste</a>
                </div>
            </form>
        </div>
    </div>
</div>
