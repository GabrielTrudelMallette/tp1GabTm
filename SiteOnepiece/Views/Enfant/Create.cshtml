@model SiteOnepiece.ViewModels.EnfantVM

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="container py-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Enfant.Nom" />

        <!-- Title Section -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center text-primary border-bottom pb-2">Crée ton propre pirate</h2>
            </div>
        </div>

        <!-- Form Fields Section -->
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <!-- Nom -->
                <div class="form-group row mb-3">
                    <label asp-for="@Model.Enfant.Nom" class="col-sm-4 col-form-label">Nom du Pirate</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Nom" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Nom" class="text-danger"></span>
                    </div>
                </div>

                <!-- Age de Début -->
                <div class="form-group row mb-3">
                    <label asp-for="@Model.Enfant.ageDebut" class="col-sm-4 col-form-label">Âge de Début</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.ageDebut" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.ageDebut" class="text-danger"></span>
                    </div>
                </div>

                <!-- Equipage -->
                <div class="form-group row mb-3">
                    <label asp-for="@Model.Enfant.Equipage" class="col-sm-4 col-form-label">Équipage</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Equipage" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Equipage" class="text-danger"></span>
                    </div>
                </div>

                <!-- Type de Fruit -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.typeDeFruit" class="col-sm-4 col-form-label">Type de Fruit</label>
                    <div class="col-sm-8">
                        <select class="form-control" asp-for="@Model.Enfant.IdParent" asp-items="@ViewBag.ListEnfant"></select>
                        <span asp-validation-for="@Model.Enfant.IdParent" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="form-group row">
                    <div class="col-sm-4 offset-sm-4">
                        <button type="submit" class="btn btn-primary form-control">Créer</button>
                    </div>
                    <div class="col-sm-4">
                        <a asp-action="Index" class="btn btn-secondary form-control">Retour à la Liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
