@model SiteOnepiece.ViewModels.EnfantVM

@{
    ViewData["Title"] = "Créer un Pirate";
}

<form method="post" asp-action="Create">
    <div class="container py-5">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <!-- Title Section -->
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center text-primary border-bottom pb-2">Crée ton propre pirate</h2>
            </div>
        </div>

        <!-- Form Fields Section -->
        <div class="row justify-content-center">
            <div class="col-md-10">
                <!-- Nom -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.Nom" class="col-sm-4 col-form-label fw-bold">Nom du Pirate :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Nom" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Nom" class="text-danger"></span>
                    </div>
                </div>

                <!-- Âge de Début -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.ageDebut" class="col-sm-4 col-form-label fw-bold">Âge de Début :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.ageDebut" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.ageDebut" class="text-danger"></span>
                    </div>
                </div>

                <!-- Équipage -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.Equipage" class="col-sm-4 col-form-label fw-bold">Équipage :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Equipage" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Equipage" class="text-danger"></span>
                    </div>
                </div>

                <!-- Type de Fruit -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.IdParent" class="col-sm-4 col-form-label fw-bold">Type de fruit :</label>
                    <div class="col-sm-8">
                        <select class="form-control form-select" asp-for="@Model.Enfant.IdParent" asp-items="@Model.ParentList">
                            <option disabled selected>--Sélectionnez le Type de fruit--</option>
                        </select>
                        <span asp-validation-for="@Model.Enfant.IdParent" class="text-danger"></span>
                    </div>
                </div>

                <!-- Image URL -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.ImageURL" class="col-sm-4 col-form-label fw-bold">Image :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.ImageURL" value="/images/luffy.jpg" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.ImageURL" class="text-danger"></span>
                    </div>
                </div>

                <!-- Description -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.Description" class="col-sm-4 col-form-label fw-bold">Description :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Description" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Description" class="text-danger"></span>
                    </div>
                </div>

                <!-- Prime -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.Prime" class="col-sm-4 col-form-label fw-bold">Prime :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Prime" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Prime" class="text-danger"></span>
                    </div>
                </div>

                <!-- Nom du Fruit -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.NomFruitDemon" class="col-sm-4 col-form-label fw-bold">Nom du Fruit :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.NomFruitDemon" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.NomFruitDemon" class="text-danger"></span>
                    </div>
                </div>

                <!-- Occupation -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.Occupation" class="col-sm-4 col-form-label fw-bold">Occupation :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.Occupation" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.Occupation" class="text-danger"></span>
                    </div>
                </div>

                <!-- Est Vedette -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.EstVedette" class="col-sm-4 col-form-label fw-bold">Est Vedette :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.EstVedette" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.EstVedette" class="text-danger"></span>
                    </div>
                </div>

                <!-- Âge Présent -->
                <div class="form-group row mb-4">
                    <label asp-for="@Model.Enfant.agePrensent" class="col-sm-4 col-form-label fw-bold">Âge Présent :</label>
                    <div class="col-sm-8">
                        <input asp-for="@Model.Enfant.agePrensent" class="form-control" />
                        <span asp-validation-for="@Model.Enfant.agePrensent" class="text-danger"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="form-group row">
                    <div class="col-sm-6 offset-sm-3 d-flex justify-content-between">
                        <button type="submit" class="btn btn-primary btn-lg px-4 py-2">Créer</button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg px-4 py-2">Retour à la Liste</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
