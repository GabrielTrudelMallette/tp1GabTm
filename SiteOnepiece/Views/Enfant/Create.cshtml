@model SiteOnepiece.ViewModels.EnfantVM

@{
    ViewData["Title"] = "Create";
}

<form method="post" asp-action="Create">
    <div class="row p-3 border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="@Model.Enfant.Nom" />

        <div class="col-12 border-bottom">
            <h2 class="text-primary">Create Pirate</h2>
        </div>
        <div class="col-8 pt-4">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Enfant"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Enfant.Nom" class="form-control" />
                    <span asp-validation-for="@Model.Enfant.Nom" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Enfant.ageDebut"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Enfant.ageDebut" class="form-control" />
                    <span asp-validation-for="@Model.Enfant.ageDebut" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Enfant.Equipage"></label>
                </div>
                <div class="col-8">
                    <input asp-for="@Model.Enfant.Equipage" class="form-control" />
                    <span asp-validation-for="@Model.Enfant.Equipage" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="@Model.Enfant.typeDeFruit"></label>
                </div>
                <div class="col-8">
                    <select class="form-control form-select" asp-for="@Model.Enfant.IdParent" asp-items="@ViewBag.Enfant"></select>
                    <span asp-validation-for="@Model.Enfant.IdParent" class="text-danger"></span>
                </div>
            </div>
            

            <div class="form-group row">
                <div class="col-4 offset-4">
                    <button type="submit" class="btn btn-primary form-control">Create</button>
                </div>
                <div class="col-4">
                    <a asp-action="Index" class="btn btn-success form-control">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</form>


