@model IEnumerable<SiteOnepiece.Models.Parent>

<div class="container py-4">
    <div class="row mb-4">
        <div class="col-md-10">
            <h2 class="text-primary">Grand pirate</h2>
        </div>
        <div class="col-md-2 text-end">
            <a asp-action="Create" class="btn btn-success">
                Crée ton propre Grand pirate
            </a>
        </div>
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <div class="card-body text-center bg-light">
                        <h3 class="card-title text-dark"> @item.Nom </h3>
                        <img src=@item.ImageURL class="img-fluid imageBorder" alt="image"><br>
                        <h5 class="text-success"> @item.Description </h5>

                        <partial name="_ParentPartial" for="@item" />

                    </div>
                </div>
            </div>
        }
    </div>
</div>
